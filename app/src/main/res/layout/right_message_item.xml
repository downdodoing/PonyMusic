<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_left">

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_weight="1"
        android:background="@drawable/send_message_back"
        android:gravity="center_vertical"
        android:minHeight="@dimen/send_message_height"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_left"
        android:paddingTop="5dp"
        android:text="你好"
        android:textSize="16sp" />

    <me.wcy.music.utils.CircleImageView
        android:layout_width="@dimen/send_message_height"
        android:layout_height="@dimen/send_message_height"
        android:src="@drawable/ic_photo" />
</LinearLayout>