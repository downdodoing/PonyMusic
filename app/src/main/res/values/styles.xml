<resources>

    <style name="CommonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="playBarBackground">@drawable/play_bar_bg_selector</item>
        <item name="textColor_bnt">@color/black</item>
        <item name="change_account">@color/grey_300_96p</item>
    </style>

    <style name="AppBaseTheme" parent="CommonStyle">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="AppBaseThemeBlack" parent="CommonStyle">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="AppBaseThemePurple" parent="CommonStyle">
        <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="AppBaseThemeGrey" parent="CommonStyle">
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="AppBaseThemePink" parent="CommonStyle">
        <item name="colorPrimary">@color/pink</item>
    </style>

    <style name="AppBaseThemeRoyalBlue" parent="CommonStyle">
        <item name="colorPrimary">@color/royal_blue</item>
    </style>

    <style name="AppBaseThemeDeepSkyBlue" parent="CommonStyle">
        <item name="colorPrimary">@color/deep_sky_blue</item>
    </style>

    <style name="AppBaseThemeDeepLightGreen" parent="CommonStyle">
        <item name="colorPrimary">@color/light_green</item>
    </style>

    <style name="AppBaseThemeDeepLightOrange" parent="CommonStyle">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="AppBaseThemeDarkSlateBlue" parent="CommonStyle">
        <item name="colorPrimary">@color/dark_slate_blue</item>
    </style>


    <style name="AppBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/grey_900</item>
        <item name="playBarBackground">@drawable/play_bar_bg_selector_dark</item>
        <item name="textColor_bnt">@color/white</item>
        <item name="change_account">@color/grey_700_96p</item>
    </style>

    <attr name="playBarBackground" format="reference" />
    <attr name="textColor_bnt" format="reference" />
    <attr name="change_account" format="reference" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="AppThemeDark" parent="AppBaseThemeDark" />

    <style name="AppTheme.Search" parent="AppBaseTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppThemeDark.Search" parent="AppBaseThemeDark">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat" />
</resources>
